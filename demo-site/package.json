{
  "name": "@baby-copilot/demo-site",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "watch": "tsc -w -p .",
    "dev": "nodemon --watch dist --ext js --exec node dist/server.js",
    "serve": "pnpm run build && pnpm run start"
  },
  "dependencies": {
    "@baby-copilot/core": "workspace:*",
    "express": "^4.19.2",
    "chokidar": "^3.6.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "20.x",
    "nodemon": "^3.1.4",
    "@types/express": "^4.17.21"
  }
}
