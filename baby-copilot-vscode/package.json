{
  "name": "baby-copilot",
  "displayName": "Baby Copilot",
  "description": "A tiny copilot.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baby-copilot.triggerSuggestion",
        "title": "Trigger suggestion"
      },
      {
        "command": "baby-copilot.viewLogs",
        "title": "View Data Collection Logs"
      },
      {
        "command": "baby-copilot.acceptSuggestion",
        "title": "Accept Suggestion"
      },
      {
        "command": "baby-copilot.cancelSuggestion",
        "title": "Cancel Suggestion"
      }
    ],
    "keybindings": [
      {
        "command": "baby-copilot.triggerSuggestion",
        "key": "alt+\\",
        "when": "editorTextFocus"
      },
      {
        "command": "baby-copilot.acceptSuggestion",
        "key": "Tab",
        "when": "baby-copilot.hasSuggestion"
      },
      {
        "command": "baby-copilot.cancelSuggestion",
        "key": "Escape",
        "when": "baby-copilot.hasSuggestion && editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@shikijs/transformers": "^3.7.0",
    "@types/diff-match-patch": "^1.0.36",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "type": "module",
  "dependencies": {
    "@types/diff": "^8.0.0",
    "diff": "^8.0.2",
    "jsdom": "^26.1.0",
    "@baby-copilot/core": "workspace:*"
  }
}
