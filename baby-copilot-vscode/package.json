{
  "name": "baby-copilot",
  "displayName": "Baby Copilot",
  "description": "A tiny copilot.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "enabledApiProposals": [
    "inlineCompletionsAdditions"
  ],
  "contributes": {
    "commands": [
      {
        "command": "baby-copilot.triggerSuggestion",
        "title": "Trigger suggestion"
      },
      {
        "command": "baby-copilot.viewLogs",
        "title": "View Data Collection Logs"
      }
    ],
    "keybindings": [
      {
        "command": "baby-copilot.triggerSuggestion",
        "key": "alt+\\",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "clean": "rm -rf out tsconfig.tsbuildinfo",
    "compile": "tsc -b ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@shikijs/transformers": "^3.7.0",
    "@types/diff-match-patch": "^1.0.36",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "type": "module",
  "dependencies": {
    "@types/diff": "^8.0.0",
    "diff": "^8.0.2",
    "jsdom": "^26.1.0",
    "@baby-copilot/core": "workspace:*"
  }
}
