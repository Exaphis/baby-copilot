{
  "name": "baby-copilot",
  "publisher": "baby-copilot",
  "displayName": "Baby Copilot",
  "description": "A tiny copilot.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "enabledApiProposals": [
    "inlineCompletionsAdditions"
  ],
  "contributes": {
    "commands": [
      {
        "command": "baby-copilot.triggerSuggestion",
        "title": "Baby Copilot: Trigger suggestion"
      },
      {
        "command": "baby-copilot.viewLogs",
        "title": "Baby Copilot: View Data Collection Logs"
      },
      {
        "command": "baby-copilot.showTelemetryStats",
        "title": "Baby Copilot: Show Telemetry Stats"
      }
    ],
    "configuration": {
      "title": "Baby Copilot",
      "properties": {
        "baby-copilot.silentCompletions": {
          "type": "boolean",
          "default": false,
          "description": "Generate and log completions without showing them in the editor."
        }
      }
    },
    "keybindings": [
      {
        "command": "baby-copilot.triggerSuggestion",
        "key": "alt+\\",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "clean": "rm -rf out tsconfig.tsbuildinfo",
    "compile": "tsc -b ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "pretest": "pnpm run clean && pnpm run compile && pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-cli": "^0.0.9",
    "eslint": "^9.25.1",
    "glob": "^10.4.5",
    "mocha": "^10.8.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^2.0.1",
    "@baby-copilot/core": "workspace:*",
    "@types/diff": "^8.0.0",
    "ai": "^6.0.3",
    "diff": "^8.0.2",
    "jsdom": "^26.1.0"
  }
}
